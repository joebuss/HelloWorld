<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joezv.ersblank.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardLayout"
        android:layout_centerVertical="true">

    </RelativeLayout>

    <Button
        android:id="@+id/Slap2"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:layout_below="@+id/Deck2"
        android:background="@android:color/transparent"

        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Player 2 Slap"
        android:rotation="180"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Deck2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Slap1"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="160dp"

        android:layout_below="@+id/Slap2"

        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Player 1 Slap"
        app:layout_constraintBottom_toTopOf="@+id/Deck1"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Deck1"

        android:layout_width="100dp"

        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Player 1 Deck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@+id/Slap1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />


    <Button
        android:id="@+id/Deck2"
        android:layout_width="100dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Player 2 Deck"
        android:rotation="180"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Deck1" />

    <TextView
        android:id="@+id/count1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:id="@+id/count2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/Slap2"
        android:layout_alignParentTop="true"
        android:rotation="180"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="23dp"
        android:layout_toStartOf="@+id/count2"
        android:rotation="0"
        android:src="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/cardLayout"
        android:rotation="0"
        android:src="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:rotation="0"
        android:src="@color/colorPrimary" />

</RelativeLayout>
